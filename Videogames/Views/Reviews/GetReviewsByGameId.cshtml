@model IEnumerable< Videogames.Models.Review >

@{
    ViewData["Title"] = "Index";
    var routeId = Context.GetRouteValue("id");
    Videogames.Models.Review emptyModel = new Videogames.Models.Review();
    emptyModel.Rating = 3;
}

<h1>Index</h1>

<p>
    <!-- add a link to game details -->
    <a asp-controller="Games" asp-action="Details" asp-route-id="@routeId">Back to Game Details</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ReviewerName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Comment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Rating)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <!--
                <td>
                    @Html.DisplayFor(modelItem => item.Game.Id)
                </td>
            -->
            <td>
                @Html.DisplayFor(modelItem => item.ReviewerName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Rating)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreatedAt)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

<partial name="PartialCreate" model="emptyModel" />
